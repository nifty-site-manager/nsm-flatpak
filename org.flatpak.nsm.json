{
    "app-id": "org.flatpak.nsm",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "nsm",
    "modules": [
        {
            "name": "nsm",
            "buildsystem": "simple",
            "build-commands": [
				"ls",
				"pwd",
                "make",
				"make install"
            ],
            "sources": [
                {
                    "type": "files",
                    "paths": ["DateTimeInfo.cpp",
					         "DateTimeInfo.h",
                             "Directory.cpp",
					         "Directory.h",
                             "Filename.cpp",
					         "Filename.h",
                             "nsm.cpp",
					         "PageBuilder.cpp",
                             "PageBuilder.h",
					         "PageInfo.cpp",
                             "PageInfo.h",
					         "Path.cpp",
                             "Path.h",
					         "Quoted.cpp",
                             "Quoted.h",
					         "SiteInfo.cpp",
                             "SiteInfo.h",
					         "Title.cpp",
                             "Title.h",
					         "Makefile"]
                }
            ]
        }
    ]
}
